<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SeleccionCategoriaController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="titulo" text="Selecciona una categoría" />

    <ComboBox fx:id="comboCategorias" prefWidth="260" styleClass="campo" />

    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#visualizar" styleClass="boton-primario" text="Visualizar Árbol" />

        <Button onAction="#regresar" text="Regresar" />
    </HBox>

</VBox>
